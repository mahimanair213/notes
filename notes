/* General Styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f9f9f9; /* Light gray background */
    color: #333; /* Dark gray text */
}

/* Header */
.titl {
    background-color: #f97304; /* Vibrant orange */
    color: white;
    padding: 20px;
    text-align: center;
    font-size: 36px;
    font-weight: bold;
    letter-spacing: 1px;
    text-transform: uppercase;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2); /* Subtle shadow */
}

/* Navigation Bar */
.nav {
    background-color: #208d07ea; /* Dark orange-red */
