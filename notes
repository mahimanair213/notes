assignment 4
employee_search.php

<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $searchEmployee = trim($_POST["searchEmployee"]);
    $searchType = $_POST["searchType"];

    // Indexed array of employee names
    $employees = ["Arya Mohite", "Saniya Maniyar", "Mane Kiran", "Mukta Mahamuni", "Emma Wilson",
                  "Frank Miller", "Grace Harris", "Henry Adams", "Ivy Clark", "Jack Lewis",
                  "Kelly Young", "Liam Turner", "Mia Scott", "Noah Walker", "Olivia Carter",
                  "Paul Allen", "Quinn Moore", "Rachel King", "Samuel Green", "Tina Hall"];

    // Associative array (Employee Name => Department)
    $employeeDepartments = [
        "Arya Mohite" => "HR",
        "Saniya Maniyar" => "IT",
        "Mane Kiran" => "Finance",
        "Mukta Mahamuni" => "Marketing",
        "Emma Wilson" => "Operations",
        "Frank Miller" => "Sales",
        "Grace Harris" => "IT",
        "Henry Adams" => "HR",
        "Ivy Clark" => "Finance",
        "Jack Lewis" => "Engineering"
    ];

    // Multidimensional array (Employee Details)
    $employeeDetails = [
        ["id" => 101, "name" => "Arya Mohite", "department" => "HR"],
        ["id" => 102, "name" => "Saniya Maniyar", "department" => "IT"],
        ["id" => 103, "name" => "Mane Kiran", "department" => "Finance"],
        ["id" => 104, "name" => "Mukta Mahamuni", "department" => "Marketing"],
        ["id" => 105, "name" => "Emma Wilson", "department" => "Operations"]
    ];

    $message = ""; // To store the output message

    // Switch case for different search types
    switch ($searchType) {
        case "indexed":
            if (in_array($searchEmployee, $employees)) {
                $message = "<p style='color:green;'>$searchEmployee is found in the employee list!</p>";
            } else {
                $message = "<p style='color:red;'>$searchEmployee is not found in the employee list.</p>";
            }
            break;

        case "associative":
            if (array_key_exists($searchEmployee, $employeeDepartments)) {
                $department = $employeeDepartments[$searchEmployee];
                $message = "<p style='color:blue;'>$searchEmployee works in the $department department.</p>";
            } else {
                $message = "<p style='color:red;'>$searchEmployee is not found in the department list.</p>";
            }
            break;

        case "multidimensional":
            $found = false;
            foreach ($employeeDetails as $employee) {
                if ($employee["name"] === $searchEmployee) {
                    $message = "<p style='color:purple;'>Employee ID: {$employee['id']}<br>
                                Name: {$employee['name']}<br>
                                Department: {$employee['department']}</p>";
                    $found = true;
                    break;
                }
            }
            if (!$found) {
                $message = "<p style='color:red;'>$searchEmployee is not found in the detailed records.</p>";
            }
            break;

        default:
            $message = "<p style='color:red;'>Invalid search type selected.</p>";
    }

    // Display the search result
    echo "<h2>Search Results</h2>";
    echo $message;
    echo '<br><a href="employee.html">Go Back</a>';
}
?>

