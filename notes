        function showParameters() {
            var shape = document.querySelector('input[name="shape"]:checked').value;
            var triangleInputs = document.getElementById('triangleInputs');
            var squareInputs = document.getElementById('squareInputs');
            var circleInputs = document.getElementById('circleInputs');
            var trianglePreview = document.getElementById('trianglePreview');
            var squarePreview = document.getElementById('squarePreview');
            var circlePreview = document.getElementById('circlePreview');

            // Hide all input sections and previews
            triangleInputs.style.display = 'none';
            squareInputs.style.display = 'none';
            circleInputs.style.display = 'none';
            trianglePreview.style.display = 'none';
            squarePreview.style.display = 'none';
            circlePreview.style.display = 'none';

            // Display the inputs and preview based on the selected shape
            if (shape == 'triangle') {
                triangleInputs.style.display = 'block';
                trianglePreview.style.display = 'block';
            } else if (shape == 'square') {
                squareInputs.style.display = 'block';
                squarePreview.style.display = 'block';
            } else if (shape == 'circle') {
                circleInputs.style.display = 'block';
                circlePreview.style.display = 'block';
            }

            // Set the hidden input to the selected shape
            document.getElementById('shapeSelected').value = shape;
        }
