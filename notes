asignn5.php

<?php
define('PI', 3.14);

interface Shape
{
    function calc_area($r, $h);
    function calc_perimeter($r, $h);
}

class Triangle implements Shape
{
    function calc_area($r, $h) // In this case, r = base, h = height
    {
        return 0.5 * $r * $h;  // Area = 1/2 * base * height
    }

    function calc_perimeter($r, $h)  // Perimeter calculation is just an example, assuming it as an equilateral triangle.
    {
        return 3 * $r;  // If we treat the input as the length of all 3 sides of an equilateral triangle.
    }
}

class Square implements Shape
{
    function calc_area($r, $h) // In this case, r = side
    {
        return $r * $r;  // Area = side^2
    }

    function calc_perimeter($r, $h)  // Perimeter of a square = 4 * side
    {
        return 4 * $r;
    }
}

class Circle implements Shape
{
    function calc_area($r, $h) // In this case, r = radius
    {
        return PI * $r * $r;  // Area = œÄ * radius^2
    }

    function calc_perimeter($r, $h)  // Circumference of circle = 2 * œÄ * radius
    {
        return 2 * PI * $r;
    }
}

// Get the selected shape operation
$shape = isset($_GET['shape']) ? $_GET['shape'] : null;

if ($shape) {
    // Check and sanitize inputs
    switch ($shape) {
        case 'triangle': // Triangle
            $base = isset($_GET['base']) ? (float)$_GET['base'] : 0;
            $height = isset($_GET['height']) ? (float)$_GET['height'] : 0;

            // Validate inputs
            if ($base <= 0 || $height <= 0) {
                echo "Please enter valid positive values for base and height.";
            } else {
                $ob = new Triangle();
                $area = $ob->calc_area($base, $height);
                $perimeter = $ob->calc_perimeter($base, $height);
                echo "Area of Triangle is: " . $area . "<br>";
                echo "Perimeter of Triangle is: " . $perimeter;
            }
            break;

        case 'square': // Square
            $side = isset($_GET['side']) ? (float)$_GET['side'] : 0;

            // Validate input
            if ($side <= 0) {
                echo "Please enter a valid positive value for side.";
            } else {
                $ob = new Square();
                $area = $ob->calc_area($side, 0);  // Height is not used for square
                $perimeter = $ob->calc_perimeter($side, 0);
                echo "Area of Square is: " . $area . "<br>";
                echo "Perimeter of Square is: " . $perimeter;
            }
            break;

        case 'circle': // Circle
            $radius = isset($_GET['radius']) ? (float)$_GET['radius'] : 0;

            // Validate input
            if ($radius <= 0) {
                echo "Please enter a valid positive value for radius.";
            } else {
                $ob = new Circle();
                $area = $ob->calc_area($radius, 0);  // Height is not used for circle
                $perimeter = $ob->calc_perimeter($radius, 0);
                echo "Area of Circle is: " . $area . "<br>";
                echo "Circumference of Circle is: " . $perimeter;
            }
            break;

        default:
            echo "Invalid shape selected.";
    }
} else {
    echo "No shape selected. Please select a shape to calculate.";
}
?>


